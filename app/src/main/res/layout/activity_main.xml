<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".ui.main.MainActivity" android:id="@+id/container">

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/upcoming"/>

    <com.agrawalsuneet.dotsloader.loaders.TrailingCircularDotsLoader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:trailingcircular_animDelay="10"
            app:trailingcircular_animDuration="1000"
            app:trailingcircular_bigCircleRadius="50dp"
            app:trailingcircular_dotsColor="@color/colorBlue"
            app:trailingcircular_dotsRadius="11dp"
            app:trailingcircular_noOfTrailingDots="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/progress" android:orientation="vertical" android:gravity="center"/>

</android.support.constraint.ConstraintLayout>